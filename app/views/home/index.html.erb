<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>

<div class="container margin-top-2">
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#featued-issues" aria-controls="featued-issues" role="tab" data-toggle="tab">Featured</a></li>
    <li role="presentation"><a href="#new-issues" aria-controls="profile" role="new-issues" data-toggle="tab">New</a></li>
    <li role="presentation"><a href="#all-issues" aria-controls="messages" role="all-issues" data-toggle="tab">All</a></li>
  </ul>

  <div class="main-box">

    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="featued-issues">
        <%= render 'issues', :all_issues => @all_issues %>
      </div>

      <div role="tabpanel" class="tab-pane" id="new-issues">
        <%= render 'issues', :all_issues => @all_issues_sorted %>
      </div>

      <div role="tabpanel" class="tab-pane" id="all-issues">
        <% @all_issues.each do |issue| %>
          <%= issue.description %><br/>
        <% end %>

        <div style='width: 800px;'>
          <div id="map" style='width: 800px; height: 400px;'></div>
        </div>
      </div>
    </div>


  </div>
</div>

<script>
  var mapCreated = false;

  function createMap() {
    handler = Gmaps.build('Google');
    handler.buildMap({provider: {}, internal: {id: 'map'}}, function () {
      var markers = handler.addMarkers(<%=raw @json.to_json %>);
      handler.bounds.extendWith(markers);
      handler.fitMapToBounds();
    });
  }

  $('a[href="#all-issues"]').on('shown.bs.tab', function () {
    if(!mapCreated) {
      createMap();
      mapCreated = true;
    }
  });

</script>